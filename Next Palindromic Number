//NEXT PALINDROMIC NUMBER

function pal(number) {
   number = "" + number;
   for(var i = 0; i < number.length/2; i++) {
    if(number [i] != number [number.length - (i + 1)])
      return false;
   }
      return true;
}
function nextPal(number) {
    while(!palindrome(++number)) {}
      return number;
}
